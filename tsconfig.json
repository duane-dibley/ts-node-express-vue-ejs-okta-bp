{
  "compilerOptions": {
    // "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    // "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    // "noUnusedLocals": false,
    "outDir": "dist",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "sourceMap": true,
    // "strict": true,
    "target": "es6",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/public"
  ]
}